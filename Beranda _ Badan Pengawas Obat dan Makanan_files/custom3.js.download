$( document ).ready(function() {
  
  
  $(window).scroll(function() {    
      var scroll = $(window).scrollTop();

      if (scroll >= 250) {
          $(".site-header").addClass("scroll slide-bottom shadow");
          $(".logo").removeClass("shadow-sm");
      } else {
          $(".site-header").removeClass("scroll slide-bottom shadow");
          $(".logo").addClass("shadow-sm");
      }
  });


